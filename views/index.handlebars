<section class="content">

  <h1 class="pageHead">Welcome to the Burger Plaza!</h1>

  <div class="burgerListsSection">

    <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}
      <div class="burgerItem">
        <span>{{burger_name}}</span>
      </div>
      <br>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}
      <button class="devourButton" value = {{id}}>
        Devour!
      </button>
      <br>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="burgerList">
      {{#each burgers}}
      {{#if devoured}}
      <div class="burgerItem devoured">
        <span>{{burger_name}}</span>
      </div>
      <br>
      {{/if}}
      {{/each}}
    </ul>
  </div>


  <h2>Create Your Own Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burgerName">Burger Name:</label>
      <input type="text" id="burgerName" name="burgerName">
    </div>



    <button type="submit">Add Burger</button>
  </form>
</section>